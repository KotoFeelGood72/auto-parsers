# Конфигурация для сервисов логирования и уведомлений

# Telegram Bot Configuration
# Получите токен бота у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Получите chat ID, отправив сообщение боту и перейдя по ссылке:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here

# Настройки логирования
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=10
LOG_CONSOLE=true
LOG_FILE=true

# Настройки обработки ошибок
MAX_ERRORS_PER_HOUR=50
ERROR_COOLDOWN=300000
CRITICAL_ERROR_THRESHOLD=10
ERROR_TELEGRAM_ENABLED=true
ERROR_FILE_ENABLED=true
ERROR_CONSOLE_ENABLED=true

# Настройки уведомлений
NOTIFY_START=true
NOTIFY_SUCCESS=true
NOTIFY_DAILY=true
DAILY_REPORT_TIME=09:00
NOTIFY_SYSTEM_STATUS=true
SYSTEM_STATUS_INTERVAL=3600000

# Настройки парсеров
PARSER_LOGGING=true
PARSER_LOG_SUCCESS=true
PARSER_LOG_WARNINGS=true
MAX_ERROR_MESSAGE_LENGTH=1000

# Telegram API настройки
TELEGRAM_TIMEOUT=10000
TELEGRAM_RETRY_ATTEMPTS=3
TELEGRAM_RETRY_DELAY=1000
TELEGRAM_RATE_LIMIT=1000
TELEGRAM_ENABLED=true
